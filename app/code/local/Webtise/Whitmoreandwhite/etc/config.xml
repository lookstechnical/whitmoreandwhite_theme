<?xml version="1.0"?>
<config>
  <modules>
    <Webtise_Whitmoreandwhite>
      <version>0.1.0</version>
    </Webtise_Whitmoreandwhite>
  </modules>
  <global>
	  
	 <blocks>
		<alyaka>
		    <class>Webtise_Whitmoreandwhite_Block</class>
		</alyaka>
		
		
	</blocks>
	
	<helpers>
		<alyaka>
		    <class>Webtise_Whitmoreandwhite_Helper</class>
		</alyaka>
		
	</helpers>
	
	
  	
    <page>
      <layouts>
        Webtise_Whitmoreandwhite_home translate="label">
          <label>Home</label>
          <template>page/home.phtml</template>
          <layout_handle>home</layout_handle>
        </Webtise_Whitmoreandwhite_home>
        
               <!-- add more layouts here -->
      </layouts>
    </page>
    
     <resources>
            <whitmoreandwhite_setup>
                <setup>
                    <module>Webtise_Whitmoreandwhite</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </whitmoreandwhite_setup>
            <whitmoreandwhite_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </whitmoreandwhite_write>
            <whitmoreandwhite_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </whitmoreandwhite_read>
        </resources>
  	
  </global>
   <adminhtml>
  <acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Webtise_Whitmoreandwhite>
							<title>something to change</title>
							<sort_order>10</sort_order>
						</Webtise_Whitmoreandwhite>
						<system>
	                        <children>
	                            <config>
	                                <children>
	                                    <whitmoreandwhite>
	                                        <title>Alyaka - All</title>
	                                    </whitmoreandwhite>
	                                </children>
	                            </config>
	                        </children>
	                    </system>
					</children>
					
				</admin>
			</resources>
		</acl>
		 </adminhtml>
</config>