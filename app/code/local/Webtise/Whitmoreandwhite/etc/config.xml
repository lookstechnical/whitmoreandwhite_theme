<?xml version="1.0"?>
<config>
  <modules>
    <Webtise_Whitmoreandwhite>
      <version>1.0.0</version>
    </Webtise_Whitmoreandwhite>
  </modules>
  <frontend>
	    <routers>
	        <ajax>
	            <use>standard</use>
	            <args>
	                <module>Webtise_Whitmoreandwhite</module>
	                <frontName>ajax</frontName>
	            </args>
	        </ajax>
	    </routers>
  </frontend> 
 
  
  <global>
	  <sales>
		<quote>
			<item>
            	<product_attributes>
               		<brand />
				</product_attributes>
			</item>
		</quote>
	</sales>
	 <fieldsets>
        <sales_convert_quote_item>
            <brand>
                <to_order_item>*</to_order_item>
            </brand>
        </sales_convert_quote_item>
        <sales_convert_order_item>
            <brand>
                <to_quote_item>*</to_quote_item>
            </brand>
        </sales_convert_order_item>
    </fieldsets>
     <events>
            <sales_quote_item_set_product>
                <observers>
                    <atwix_customattribute>
                        <class>whitmoreandwhite/observer</class>
                        <method>salesQuoteItemSetCustomAttribute</method>
                    </atwix_customattribute>
                </observers>
            </sales_quote_item_set_product>
        </events>
	 <blocks>
		<whitmoreandwhite>
		    <class>Webtise_Whitmoreandwhite_Block</class>
		</whitmoreandwhite>
	</blocks>
	<models>
		<whitmoreandwhite>
		    <class>Webtise_Whitmoreandwhite_Model</class>
		</whitmoreandwhite>
	</models>
	<!--
	<helpers>
		<alyaka>
		    <class>Webtise_Whitmoreandwhite_Helper</class>
		</alyaka>
		
	</helpers>
	
	
  	-->
    <page>
      <layouts>
        <Webtise_Whitmoreandwhite_home translate="label">
          <label>Home</label>
          <template>page/home.phtml</template>
          <layout_handle>home</layout_handle>
        </Webtise_Whitmoreandwhite_home>
        
               
      </layouts>
    </page>
    
    <resources>
            <whitmoreandwhite_setup>
                <setup>
                    <module>Webtise_Whitmoreandwhite</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </whitmoreandwhite_setup>
            <whitmoreandwhite_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </whitmoreandwhite_write>
            <whitmoreandwhite_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </whitmoreandwhite_read>
        </resources>
  	
  </global>
  <adminhtml>
      <acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Webtise_Whitmoreandwhite>
							<title>something to change</title>
							<sort_order>10</sort_order>
						</Webtise_Whitmoreandwhite>
						<system>
	                        <children>
	                            <config>
	                                <children>
	                                    <whitmoreandwhite>
	                                        <title>Alyaka - All</title>
	                                    </whitmoreandwhite>
	                                </children>
	                            </config>
	                        </children>
	                    </system>
					</children>
				</admin>
			</resources>
		</acl>
   </adminhtml>
</config>